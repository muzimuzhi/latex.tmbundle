#!/bin/sh

if [ -e "/usr/bin/python" ]; then
  python="/usr/bin/python"
else
  python="/usr/bin/python3"
  "$python" -c 'from Foundation import CFPreferencesAppSynchronize'
  if [ "$?" -ne 0 ]; then
    "$DIALOG" alert \
    --alertStyle error \
    --title 'This command requires PyObjC' \
    --body \
'Please run the following Terminal command and retry:

/usr/bin/pip3 install pyobjc
'   --button1 OK
  fi
fi

exec "$python" "$@"
